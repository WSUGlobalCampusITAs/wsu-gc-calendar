<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="Calendar_Converter.Day"
	x:Name="UserControl"
	MinHeight="70" MinWidth="65">

	<Grid x:Name="LayoutRoot">
		<Grid.RowDefinitions>
			<RowDefinition Height="17*"/>
			<RowDefinition Height="43*"/>
		</Grid.RowDefinitions>
		<Rectangle Stroke="Black" Fill="#FFC9C9C9" Margin="0,0,0.0,0" Grid.Row="1" StrokeThickness="2"/>
		<Rectangle  Stroke="Black" Margin="0,0,0,0" StrokeThickness="2"  />
		<TextBlock x:Name="tblkDayOfWeek" TextWrapping="Wrap" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Lucida Sans Unicode" FontSize="11" Foreground="#FFEBEBEB" />
		<TextBlock x:Name="tblkDate" TextAlignment="Center" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Microsoft Sans Serif" FontSize="12" Foreground="Black" Grid.Row="1"/>
	</Grid>
</UserControl>